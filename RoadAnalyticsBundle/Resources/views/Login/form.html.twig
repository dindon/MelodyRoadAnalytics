{% extends 'MelodyRoadAnalyticsBundle:Layout:layoutLogin.html.twig' %}
{% block body %}
	<div style="width: 100%; height: 70px;"></div>
	{% if error != "" %}<p style="color: #900; text-align: center; margin-bottom: 10px;">{{ error }}</p>{% endif %}
	<form action="{{ path('MelodyRoadAnalyticsBundle_loginCheck') }}" method="post" id="loginForm">
		<input type="hidden" name="token" value="{{ token }}" />
		<input type="text" name="login" placeholder="Identifiant ..." class="input" />
		<br />
		<input type="password" name="pwd" placeholder="Mot de passe ..." class="input" />
		<br />
		<input type="submit" class="submit" value="Connexion" />
	</form>
	<div style="width: 100%; height: 70px;"></div>
{% endblock %}